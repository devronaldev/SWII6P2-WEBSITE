@{
    ViewData["Title"] = "Página Inicial";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="nameInput" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="nameInput" placeholder="Insira o nome completo">
                        </div>

                        <div class="mb-3">
                            <label for="passwordInput" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="passwordInput" placeholder="Por favor, insira a senha">
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

